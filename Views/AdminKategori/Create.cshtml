@model MVC_Blog_Website.Models.Kategori

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="margin-left:10px;font-family:'Century Gothic';">Kategori Oluştur</h2>

@using (Html.BeginForm("Create", "AdminKategori", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="margin-left:10px;font-family:'Century Gothic';">
        <h4 style="margin-left:10px;font-family:'Century Gothic';">Kategori</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Kategori Adı</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.KategoriAdi, new { htmlAttributes = new { @class = "form-control", @required = "" } })
                @Html.ValidationMessageFor(model => model.KategoriAdi, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-4">
            <a href="/AdminKategori/Index/"><input type="button" value="Geri Dön" class="btn btn-danger" /></a>
            <input type="submit" value="Oluştur" class="btn btn-info" />
        </div>
    </div>

}