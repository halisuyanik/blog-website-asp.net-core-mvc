@model MVC_Blog_Website.Models.Kategori

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="font-family:'Century Gothic';margin-left:15px;">Kategoriyi Sil</h2>

<h3 style="font-family:'Century Gothic';margin-left:15px;">Kategoriyi silmek istiyor musunuz ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal" style="font-family:'Century Gothic';margin-left:15px;">
        <dt>
            <label class="control-label ">Kategori Adı</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.KategoriAdi)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                <a href="/AdminKategori/Index/"><input type="button" value="Geri Dön" class="btn btn-danger" /></a>
                <input type="submit" value="Sil" class="btn btn-info" />
            </div>
        </div>
    }
</div>
