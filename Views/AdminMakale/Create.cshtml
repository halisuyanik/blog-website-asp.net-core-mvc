@model MVC_Blog_Website.Models.Makale

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="font-family:'Century Gothic';margin-left:15px;">Yeni Makale Oluştur</h2>

@using (Html.BeginForm("Create", "AdminMakale", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" style="font-family:'Century Gothic';margin-left:15px;">
    <h4 style="font-family:'Century Gothic';margin-left:15px;">Makale</h4>
    <h1>@ViewBag.HataMesaji</h1>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group" style="font-family:'Century Gothic';">

        <div class="col-md-10">
            <label>Kategori Adı</label>
            @Html.DropDownList("KategoriId", null , htmlAttributes: new { @class = "form-control"  })
            @Html.ValidationMessageFor(model => model.KategoriId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <label>Makale Başlık</label>
            @Html.EditorFor(model => model.Baslik, new { htmlAttributes = new { @class = "form-control", @required = "" } })
            @Html.ValidationMessageFor(model => model.Baslik, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <label>Makale İçerik</label>
            @Html.EditorFor(model => model.Icerik, new { htmlAttributes = new { @class = "form-control", @required = "" } })
            @Html.ValidationMessageFor(model => model.Icerik, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <label>Makale Thumbnail</label>
            <input type="file" required name="gorsel" id="gorsel" accept=".jpg,.png,.jpeg,.gif" class="form-control" />
            @Html.ValidationMessageFor(model => model.Gorsel, "", new { @class = "text-danger" })
        </div>
    </div>

    @*<div class="form-group">
        <div class="col-md-10">
            <label>Makale Tarih</label>
            @Html.EditorFor(model => model.Tarih, new { htmlAttributes = new { @class = "form-control", @type = "datetime-local", @required = "" } })
            @Html.ValidationMessageFor(model => model.Tarih, "", new { @class = "text-danger" })
        </div>
    </div>*@

    <div class="form-group">
        @Html.Label("Etiketler", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("Etiketler")
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-4">
            <a href="/AdminMakale/Index/"><input type="button" value="Geri Dön" class="btn btn-danger" /></a>
            <input type="submit" value="Oluştur" class="btn btn-info" />
        </div>
    </div>
</div>
}

