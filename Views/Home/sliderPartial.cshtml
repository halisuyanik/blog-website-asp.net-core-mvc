@model IEnumerable<MVC_Blog_Website.Models.Makale>
@{
    Layout = null;
}
<div id="sliderhidden">
    <div class="owl-carousel owl-theme col-md-12">
        @foreach (var item in Model)
        {<a href="/Home/MakaleDetay/@item.MakaleId/">
                <div style="position: relative; text-align: center; color:white;" class="container">

                    <img class=" img-thumbnail" title="@item.Baslik" style="margin-top:15px; width:auto; height:150px;" alt="@item.Baslik" src="@item.Gorsel">

                    <div style="position: absolute; bottom: 4px; left: 4px; right:4px; font-size:small;" class="bottom-left">@item.Baslik</div>
                </div>
            </a>
        }
    </div>
</div>

